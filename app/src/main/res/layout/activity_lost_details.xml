<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostDetailsActivity">

    <!-- ðŸ”´ Header Banner -->

    <TextView
        android:id="@+id/textViewBanner"
        android:layout_width="419dp"
        android:layout_height="69dp"
        android:layout_marginBottom="5dp"
        android:background="#A00606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="40dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bataan_peninsula_state_university_logo" />

    <TextView
        android:id="@+id/textViewUniversity"
        android:layout_width="280dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif"
        android:text="Bataan Peninsula State University"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <!-- ðŸ”´ Page Header -->

    <!-- ðŸŸ¤ Item Image (Same as Found Details) -->
    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="284dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="Lost Item Details"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <FrameLayout
        android:id="@+id/frameItemImage"
        android:layout_width="161dp"
        android:layout_height="145dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#D5C5C5"
        app:layout_constraintBottom_toTopOf="@+id/tableLostDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewHeader">

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="Item Image"
            android:scaleType="fitXY" />

    </FrameLayout>

    <!-- ðŸŸ¢ Lost Item Details Table -->
    <TableLayout
        android:id="@+id/tableLostDetails"
        android:layout_width="390dp"
        android:layout_height="283dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:stretchColumns="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameItemImage">

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Item Name:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewItemName"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Description:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDescription"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Category:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCategory"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Owner:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOwner"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Contact Number:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewContact"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Date Loss:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateLoss"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Location Loss:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewLocationLoss"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@drawable/cell_border"
                android:padding="8dp"
                android:text="Campus:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCampus"
                android:background="@drawable/cell_border"
                android:padding="8dp" />
        </TableRow>

    </TableLayout>

    <!-- ðŸŸ¡ Status Section -->
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tableLostDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Found"
            android:textColor="#000000"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/radioNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="Not Found"
            android:textColor="#000000"
            android:textSize="13sp" />
    </RadioGroup>

    <!-- ðŸ”µ Spinner -->
    <Spinner
        android:id="@+id/spinner8"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:background="@drawable/pngaaa_com_5204195"
        android:entries="@array/menu_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.930"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

</androidx.constraintlayout.widget.ConstraintLayout>
